-- vistas materializadas,tablas temporales,
-- Vistas: limitar los datos,controlar la informacion,mejorar el rendimiento,optimizar el trabajo
-- SE VE EN LA SECCION DE VISTAS
CREATE VIEW VISTA_CURSOS_ESTUDIANTES AS
SELECT instructors.INSTRUCTORID,instructorsvista_cursos_estudiantes.FIRSTNAME,INSTRUCTORS.LASTNAME, COURSES.COURSESID,COURSES.COURSENAME 
FROM INSTRUCTORS
LEFT JOIN COURSES
ON INSTRUCTORS.INSTRUCTORID=COURSES.INSTRUCTORID;

/*create or replace view  VIEW_STUDENTS AS  -- CREAR LA VISTA
select STUDENTID.,FIRSTNAME,LASTNAME 
FROM STUDENTS; -- UTILIZAR EL SELECT PARA SELECCIONAR LA INFORMACION





